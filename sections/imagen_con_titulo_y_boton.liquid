{% schema %}
{
  "name": "Imagen con título y botón",
  "settings": [
    {
      "type": "image_picker",
      "id": "imagen_fondo",
      "label": "Imagen de fondo"
    },
     {
      "type": "text",
      "id": "titulo",
      "label": "Título"
    },
    {
      "type": "url",
      "id": "url_boton",
      "label": "URL del botón"
    },
    {
      "type": "text",
      "id": "texto_boton",
      "label": "Texto del botón"
    }
  ],
  "presets": [
    {
      "name": "Imagen con título y botón",
      "category": "Contenido"
    }
  ]
}
{% endschema %}

<style>
 
  
  .contenido {
    position: absolute;
    top: 20px;
    left: 20px;
    width: 100%;
    text-align: center;
  }

  .imagen-con-titulo-y-boton .imagen::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Color de fondo semi-transparente (negro con 50% de opacidad) */
    border-radius: 40px; /* Hacer la imagen completamente redonda */
}


 .imagen-con-titulo-y-boton h2 {
   color: #FFFFFF;
    font-family: "Poppins", Sans-serif;
    font-size: 62px;
    font-weight: 700;
    line-height: 1.1em;
}

  
 .imagen-con-titulo-y-boton {
    position: relative;
    width: 100%;
    max-width: 90%; /* Ancho máximo del contenedor */
    margin: 0 auto; /* Centrar el contenedor horizontalmente */
    height: 700px; /* Ajusta la altura según tus necesidades */
    overflow: hidden;
}


  .imagen {
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    border-radius: 40px; /* Hacer la imagen completamente redonda */
  }

 

 .boton {
    position: absolute;
    bottom: 20px; /* Ajusta la distancia desde la parte inferior según sea necesario */
    left: 50%;
    transform: translateX(-50%);
    display: flex; /* Usamos flexbox para centrar vertical y horizontalmente */
    justify-content: center; /* Centramos horizontalmente */
    align-items: center; /* Centramos verticalmente */
    padding: 20px; /* Ajusta el padding según sea necesario */
    background-color: #ffa500; /* Color naranja */
    color: #000000; /* Color del texto negro */
    text-decoration: none;
    font-size: 18px;
    font-weight: bold; /* Hacemos el texto en negrita */
    border-radius: 50%; /* Hacer el botón completamente redondo */
    width: 130px; /* Ajusta el ancho según sea necesario */
    height: 130px; /* Ajusta el alto según sea necesario */
}




</style>


<div class="imagen-con-titulo-y-boton">
   <div class="imagen" style="background-image: url('{{ section.settings.imagen_fondo | image_url }}');">
     <div class="contenido">
         <h2>{{ section.settings.titulo }}</h2>
     </div>
     <a href="{{ section.settings.url_boton }}" class="boton">{{ section.settings.texto_boton }}</a>
  </div>
</div>


