<style>
  .card-section {
    max-width: 1200px;
    margin: 0 auto; /* Centrar las tarjetas */
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .card {
    width: calc(33.33% - 20px);
    margin-bottom: 20px;
    padding: 20px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    transition: background-color 0.3s;
  }

  .card:hover {
    background-color: #c0c0c0;
    border-radius: 10px;
  }

  .card-content {
    display: flex;
    align-items: flex-start;
    margin-top: 10px;
  }

  .card img {
    width: 100px;
    height: auto;
    margin: 0 auto; /* Centrar la imagen horizontalmente */
    margin-bottom: 10px; /* Añadir espacio entre la imagen y el título en dispositivos móviles */
  }

  .card h3 {
    font-size: 24px;
    font-weight: bold;
    margin: 0;
    color: #222;
    line-height: 1.3;
  }

  .card p {
    color: #1E1E1E;
    margin: 0;
    line-height: 1.3;
  }

  .blue-link {
    color: #007bff;
    text-decoration: none;
    margin-top: 10px;
  }

  .blue-link:hover {
    text-decoration: underline;
  }

  @media only screen and (max-width: 768px) {
    .card-section {
      margin: 0 auto; /* Centrar las tarjetas en dispositivos móviles */
    }
  
    .card {
      width: 100%; /* Cambiado a 100% para dispositivos móviles */
      text-align: center; /* Centrar todo el contenido en dispositivos móviles */
    }

    .card img {
      width: 70px;
    }
    
    .card-content {
      flex-direction: column; /* Cambiado a columna para dispositivos móviles */
      margin-top: 10px; /* Ajustar margen según sea necesario */
      text-align: center; /* Centrar el texto en dispositivos móviles */
    }
    
    .card p {
      margin-top: 10px; /* Añadir margen superior para dispositivos móviles */
      text-align: center; /* Centrar el texto en dispositivos móviles */
    }
  }

  @media only screen and (min-width: 769px) {
    .card img {
      margin-right: 10px; /* Añadir margen a la derecha de la imagen solo en pantallas de ordenador */
    }

    .card-content {
      align-items: flex-start; /* Mantener la alineación a la izquierda en pantallas de ordenador */
    }
  }
</style>
















<div class="card-section">
  {% for block in section.blocks %}
    <div class="card">
      <div class="card-content">
        <img src="{{ block.settings.imagen | asset_url }}" alt="{{ block.settings.title }}">
        <div>
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
          <a href="{{ block.settings.link }}" class="blue-link">Quiero saber más</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Sección de Tarjetas",
  "settings": [],
  "presets": [
    {
      "name": "Tarjetas",
      "category": "Custom"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Tarjeta",
      "settings": [
        {
          "type": "image_picker",
          "label": "Imagen",
          "id": "image"
        },
        {
          "type": "text",
          "label": "Título",
          "id": "title"
        },
        {
          "type": "textarea",
          "label": "Texto",
          "id": "text"
        },
        { 
          "type": "url",
          "label": "Enlace",
          "id": "link"
        },
        {
          "type": "text",
          "label": "nombre imagen",
          "id": "imagen"
        }
      ]
    }
  ]
}
{% endschema %}
